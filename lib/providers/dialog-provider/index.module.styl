@keyframes lct-dialog-provider-enter
  from
    opacity: 0
  to
    opacity: 1

.lct-dialog-provider-enter
  animation: lct-dialog-provider-enter linear .2s

@keyframes lct-dialog-provider-leave
  from
    opacity: 1
  to
    opacity: 0

.lct-dialog-provider-leave
  animation: lct-dialog-provider-leave linear .2s
