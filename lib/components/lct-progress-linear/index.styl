.lct-progress-linear
  position: relative
  overflow: hidden

  .progress-visibility-control
    height: 100%

  .progress-background
    width: 100%
    height: 100%
    position: absolute
    top: 0
    left: 0
    opacity: .2
    background-color: currentColor

  .progress-body-container
    height: 100%
    animation: lct-progress-linear-body-move linear 1.1s infinite

    .progress-body
      width: 30%
      height: 100%
      background-color: currentColor
      animation: lct-progress-linear-body-stress ease 1.1s infinite
      transform-origin: 100% 50%

@keyframes lct-progress-linear-body-move
  0%
    transform: translate(0, 0)

  100%
    transform: translate(100%, 0)

@keyframes lct-progress-linear-body-stress
  0%
    transform: translate(-100%, 0) scaleX(1)

  100%
    transform: translate(100%, 0) scaleX(0)
