@keyframes lct-select-entry-animation
  from
    opacity: 0
    transform: translate(0, -30px)
  to
    opacity: 1
    transform: translate(0, 0)

@keyframes lct-select-close-animation
  from
    opacity: 1
    transform: translate(0, 0)
  to
    opacity: 0
    transform: translate(0, -5px)

.lct-select
  font-size: 14px

  .lct-select-widget
    position: relative
    background-color: #fff
    border: 1px solid rgba(0, 0, 0, 0.1)
    border-radius: 4px
    cursor: pointer

    &.disabled
      opacity: 0.4
      cursor: default

      .list-item-container
        display: none

    .selection-container
      display: flex
      min-height: 40px
      padding: 5px
      align-items: center
      box-sizing: border-box

      .selection-content
        flex-grow: 1

        .lct-chip
          margin: 3px 0

        .single-selection-text
          margin: 0 5px

      .drop-icon
        color: #6C6F7E
        transition: all $easing .4s

        &.activated
          transform: rotate(180deg)

.lct-select-list-item-container
  max-height: 30vh
  width: 100%
  position: fixed
  overflow: auto
  box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.1)
  background-color: #fff
  font-size: 14px
  z-index: 100

  .list-item
    height: 40px
    padding: 0 10px
    color: #1c1c1c
    line-height: @height
    white-space: nowrap
    text-overflow: ellipsis
    overflow: hidden
    cursor: pointer

    &.item-selected
      color: #607d8b

    &:hover
      background-color: #f5f6f8

    &:active
      background-color: darken(#f5f6f8, 5%)

.lct-select-entry-animation
  animation: lct-select-entry-animation $easing .2s

.lct-select-close-animation
  animation: lct-select-close-animation $easing .4s
