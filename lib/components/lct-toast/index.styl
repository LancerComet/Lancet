.lct-toast
  min-width: 150px
  max-width: 500px
  display: flex
  align-items: center
  justify-content: center
  padding: 15px 20px
  margin: 10px 5px
  border: none
  border-radius: 100px
  color: #fff
  background-color: #f1f1f3
  font-size: 14px
  word-wrap: break-word
  word-break: break-word
  box-shadow: 0 2px 10px 0 rgba(0, 0, 0, 0.1)
