.lct-button
  padding: 15px 25px
  margin: 10px 5px
  font-size: 14px
  background-color: #dadada
  border-radius: 8px
  cursor: pointer
  transition: all $easing .2s
  border: 1px solid transparent

  &:active
    transition: none !important

  &:not(.transparent)
    color: #fff

  &.transparent
    background-color: transparent
    color: $defaultFontColor

    &:hover
      background-color: transparent
      color: $defaultFontColor

    &:active
      background-color: transparent
      color: $defaultFontColor

  &[disabled]
    opacity: .4
    cursor: default

  &.outlined
    background-color: transparent
    color: $defaultFontColor
    border: 1px solid @color

  .content-container
    display: inline-flex
    align-items: center
    justify-content: center
    vertical-align: middle
