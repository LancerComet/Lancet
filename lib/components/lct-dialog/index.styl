.lct-dialog
  display: flex
  align-items: center
  justify-content: center
  width: 100vw
  height: 100vh
  position: fixed
  top: 0
  left: 0
  z-index: 10

  .background-mask
    width: 100%
    height: 100%
    position: absolute
    top: 0
    left: 0
    background-color: rgba(0, 0, 0, .5)

  .dialog-body
    display: flex
    flex-direction: column
    max-height: 90vh
    position: relative
    padding: 20px
    background-color: #fff
    border-radius: 4px
    animation: lct-dialog-body-enter $easing .4s
    box-sizing: border-box

    .close-button
      position: absolute
      right: 0
      top: 0
      transition: all $easing .4s

      .close-icon
        background-image: url('./close.svg')
        background-size: 100% 100%
        height: 12px
        width: 12px

      &:hover
        transform: rotate(180deg) scale(1.2)

      &:active
        transform: rotate(180deg) scale(0.9)
        transition: none

    .dialog-title
      margin-bottom: 10px
      font-size: 16px

    .dialog-content
      margin: 10px 0
      overflow: auto
      font-size: 14px
      color #212121

    .btn-container
      margin-top: 10px
      text-align: right

      .confirm-btn
      .cancel-btn
        width: 100px
        margin: 0 10px

@keyframes lct-dialog-body-enter
  from
    opacity: 0
    transform: translate(0, 5em)

  to
    opacity: 1
    transform: translate(0, 0)
