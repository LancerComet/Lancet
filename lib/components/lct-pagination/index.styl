.lct-pagination
  display flex
  align-items center

  .primary-border
    border: 1px solid rgba(0,0,0,0.1)

  .pagination-btn
    width 40px
    height @width
    flow-shrink: 0
    border-radius: 2px
    border: 1px solid rgba(0,0,0,0.1)

  .pagination-change
    padding 0
    margin 10px
    width 74px

  .pagination-input
    display: flex
    align-items: center
    margin-left: 40px

    .lct-input
      margin: 0 9px

    span
      font-size: 12px
      color: #1C1C1F

  .lct-textfield
    .textfield-input
      height: 26px
      padding: 0 4px
