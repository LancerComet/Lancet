$drawerWidth = 300px

.lct-nav-view
  display: flex
  width: 100%
  height: 100%

  .lct-nav-view-drawer
    flex-shrink: 0
    width: $drawerWidth
    height: 100%
    position: absolute
    left: 0
    top: 0
    transition: all $easing .2s
    z-index: 1
    box-sizing: border-box

    &.open
      transform: translate(0, 0)

    &.closed
      transform: translate(-100%, 0)

    @media screen and (max-width: 900px)
      padding: 15px

    .lct-nav-view-drawer-content
      height: 100%
      overflow: auto

      @media screen and (max-width: 900px)
        border-radius: 20px

  .lct-nav-view-frame
    height: 100%
    position: relative
    overflow: auto
    box-sizing: border-box

    &.drawer-open
      width: s("calc(100% - %s)", $drawerWidth)
      left: $drawerWidth

    @media screen and (max-width: 900px)
      width: 100% !important
      left: 0 !important

  .lct-nav-drawer-button
    position: absolute
    padding: 10px
    left: 10px
    top: 10px
    z-index: 2
